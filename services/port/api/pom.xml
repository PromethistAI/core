<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.promethistai.port</groupId>
        <artifactId>port</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>port-api</artifactId>
    <version>${project.parent.version}</version>
    <name>Promethist Port API</name>

    <properties>
        <swagger.version>1.5.22</swagger.version>
        <api.host>localhost:8080</api.host>
        <api.locations>com.promethistai.common.resources,com.promethistai.port.resources</api.locations>
        <api.version>${project.version}</api.version>
        <api.description>PromethistAI Port API (${project.version})</api.description>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.promethistai.common</groupId>
            <artifactId>common-lib</artifactId>
            <version>${promethistai.common.version}</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${project.basedir}/src/main/kotlin</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <goals> <goal>compile</goal> </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/kotlin</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <goals> <goal>test-compile</goal> </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/test/kotlin</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <version>3.1.7</version>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <springmvc>false</springmvc>
                            <locations>${api.locations}</locations>
                            <schemes>https,http</schemes>
                            <host>${api.host}</host>
                            <basePath>/</basePath>
                            <outputFormats>json,yaml</outputFormats>
                            <swaggerDirectory>${project.build.outputDirectory}/META-INF/${project.artifactId}</swaggerDirectory>
                            <info>
                                <title>${project.name}</title>
                                <version>${api.version}</version>
                                <description>${api.description}</description>
                                <termsOfService>https://promethist.ai/terms</termsOfService>
                                <contact>
                                    <email>support@promethist.ai</email>
                                    <name>PromethistAI Support</name>
                                    <url>https://promethist.ai</url>
                                </contact>
                            </info>
                            <securityDefinitions>
                                <securityDefinition>
                                    <name>key</name>
                                    <type>apiKey</type>
                                    <in>query</in>
                                </securityDefinition>
                            </securityDefinitions>
                        </apiSource>
                    </apiSources>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>